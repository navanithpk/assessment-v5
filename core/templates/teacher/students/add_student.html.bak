{% extends "teacher/teacher_base.html" %}

{% block title %}Add Student{% endblock %}

{% block content %}
<style>
.form-card {
  max-width: 640px;
  background: white;
  padding: 24px;
  border-radius: 14px;
  box-shadow: 0 6px 20px rgba(0,0,0,.08);
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
}

.form-grid label {
  font-weight: 600;
  font-size: 14px;
}

.form-grid input,
.form-grid select {
  width: 100%;
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #ccc;
}

.actions {
  margin-top: 20px;
  display: flex;
  gap: 12px;
}

.btn {
  border: none;
  padding: 10px 16px;
  border-radius: 10px;
  cursor: pointer;
  font-size: 14px;
}

.btn.primary { background: #2563eb; color: white; }
.btn.muted { background: #e5e7eb; }
</style>

<h1>Add Student</h1>

<div class="form-card">
<form method="post">
  {% csrf_token %}

  <div class="form-grid">
    <div>
      <label>Full Name *</label>
      <input type="text" name="full_name" required>
    </div>

    <div>
      <label>Roll Number</label>
      <input type="text" name="roll_number">
    </div>

    <div>
      <label>Admission ID</label>
      <input type="text" name="admission_id">
    </div>

    <div>
      <label>Grade *</label>
      <select name="grade" required>
        <option value="">Select</option>
        {% for g in grades %}
          <option value="{{ g.id }}">{{ g.name }}</option>
        {% endfor %}
      </select>
    </div>

    <div>
      <label>Section *</label>
      <input type="text" name="section" placeholder="A / B / C" required>
    </div>
  </div>

  <div class="actions">
    <button type="submit" class="btn primary">Save Student</button>
    <a href="{% url 'students_list' %}" class="btn muted">Cancel</a>
  </div>
</form>
</div>
{% endblock %}
